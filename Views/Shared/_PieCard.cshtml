@model Pie

<div class="col">
    <div class="card pie-card">
        <img src="@Model.ImageThumbnailUrl" class="card-img-top" alt="@Model.Name">
        <div class="card-body pie-button">
            <h4 class="d-grid">
                <a class="btn btn-secondary"
                   asp-controller="ShoppingCart"
                   asp-action="AddOrRemoveFromShoppingCart"
                   asp-route-pieId="@Model.PieId"
                   asp-route-addOrRemove="true"
                   asp-route-amount="1">+ Add to cart</a>
            </h4>

            <div class="d-flex justify-content-between mt-2">
                <h2 class="text-start">
                    <a class="pie-link"
                       asp-controller="Pie"
                       asp-action="Details"
                       asp-route-id="@Model.PieId">@Model.Name</a>
                </h2>
                <h5 class="text-nowrap">
                    @Model.Price.ToString("c", CultureInfo.CreateSpecificCulture("pl-PL"))
                </h5>
            </div>
        </div>
    </div>
</div>